              <li v-for="(item, i) in items.value" :key="i">
                <img :src="item.img" alt="" v-if="item.img" />
                <span
                  :class="{
                    'options-item-text': item.img,
                    'options-item-text-notImg': !item.img
                  }"
                  >{{ item.name }}</span
                >
              </li>
            </ul>
          </div>
