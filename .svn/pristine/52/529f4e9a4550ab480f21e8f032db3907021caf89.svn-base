          <h1 class="goods-name">
            {{ detailGoods.name }}
          </h1>
          <div class="goods-price">
            <span class="goods-label">叮咚价</span>
            <span class="price">{{ detailGoods.price | keepPoint }}</span>
            <a href="#" class="notice">降价通知</a>
          </div>
          <div class="express-location">
            <span class="goods-label">配送至</span>
